<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Padding">

        <item name="android:padding">16dp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="NumberStyle" parent="@style/Padding">

        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/red</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="AlphabetStyle"  parent="@style/Padding">

        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/yellow</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="FamilyStyle"  parent="@style/Padding">

        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/orange</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="ColorStyle"  parent="@style/Padding">

        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/green</item>
        <item name="android:textSize">24sp</item>
    </style>

</resources>
